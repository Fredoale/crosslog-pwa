# Google Sheets API Configuration
VITE_GOOGLE_SHEETS_API_KEY=your_api_key_here
# BASE sheet (para que el chofer comience las entregas)
VITE_GOOGLE_SPREADSHEET_ID=your_base_spreadsheet_id
# Sistema_Entregas sheet (para registro de entregas completadas y documentos)
VITE_GOOGLE_SPREADSHEET_ENTREGAS_ID=your_entregas_spreadsheet_id

# Google Drive Configuration (for PDF uploads)
VITE_GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# Google OAuth Client ID (for user authentication in browser)
VITE_GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com

# Google Service Account (for automatic Drive uploads without user OAuth)
# Get from: https://console.cloud.google.com/iam-admin/serviceaccounts
# Download JSON key file and extract these values
VITE_GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
VITE_GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n

# Google Apps Script Web App URL (for writing to Sheets)
# Deploy your Google Apps Script as Web App and paste the URL here
# See: google-apps-script/README.md for instructions
VITE_GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# Cloudinary Configuration (deprecated - using Google Drive now)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset
VITE_CLOUDINARY_API_KEY=your_api_key

# N8N Webhook (Production)
VITE_N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/crosslog-entregas

# App Configuration
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Claude AI Configuration (for intelligent reports)
VITE_CLAUDE_API_KEY=sk-ant-api03-your_claude_api_key

# Internal Access Credentials (for Crosslog staff only)
VITE_INTERNAL_USERNAME=crosslog_admin
VITE_INTERNAL_PASSWORD=YourSecurePassword123!

# Firebase Configuration (for Marketplace real-time features)
VITE_FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef

# Feature Flags (control what's enabled in production)
# Set to 'true' or 'false' (as strings)
VITE_FEATURE_MARKETPLACE_FIRESTORE=false  # Marketplace with Firebase (real-time)
VITE_FEATURE_GESTION_DOCUMENTOS=true      # Document management system
VITE_FEATURE_DASHBOARD_DOCS=true          # Documentation dashboard with alerts
